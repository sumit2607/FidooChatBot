<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <RelativeLayout
        android:id="@+id/re"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24" />

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="233dp"
            android:layout_marginBottom="17dp"
            android:text="Doo Bot"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="306dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/fidoo" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/re"
        android:background="#E5E5E5">

        <TextView
            android:id="@+id/textView"
            android:layout_width="223dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="53dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:text="Hii Customer please select an option to get started" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="123dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="104dp"
            android:layout_marginTop="73dp"
            android:background="@drawable/bordergreen"
            android:gravity="center"
            android:text="order Related"
            android:textColor="#3CC13B" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="123dp"
            android:layout_height="42dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="73dp"
            android:layout_marginEnd="49dp"
            android:background="@drawable/bordergreen"
            android:gravity="center"
            android:text="payment Issue"
            android:textColor="#3CC13B" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="123dp"
            android:layout_height="42dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="124dp"
            android:layout_marginEnd="112dp"
            android:background="@drawable/bordergreen"
            android:gravity="center"
            android:text="Where is my order"
            android:textColor="#3CC13B" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="166dp"
            android:layout_height="46dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="56dp"
            android:layout_marginTop="285dp"
            android:background="@drawable/border"
            android:text="Ok we think about you'r
            concern please select an option" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:layout_below="@+id/textView6"
            android:layout_alignParentStart="true"
            android:layout_marginStart="90dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/bordergreen"
            android:text="Rider Not Assigned" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="138dp"
            android:layout_height="39dp"
            android:layout_below="@+id/textView7"
            android:layout_alignParentStart="true"
            android:layout_marginStart="104dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bordergreen"
            android:text="Merchant Not accpting the order" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="138dp"
            android:layout_height="39dp"
            android:layout_below="@+id/textView8"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="162dp"
            android:background="@drawable/bordergreen"
            android:text="order status missing?" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="21dp"
            app:srcCompat="@drawable/fidoo" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="122dp"
            android:layout_height="42dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="239dp"
            android:layout_marginEnd="81dp"
            android:background="@drawable/bordergreen"
            android:text="Order Related" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="228dp"
            android:layout_marginEnd="18dp"
            app:srcCompat="@drawable/man" />

        <TextView
            android:id="@+id/finalResult"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_below="@+id/textView9"
            android:layout_marginStart="17dp"
            android:layout_marginTop="23dp"
            android:layout_toEndOf="@+id/imageView4"
            android:background="@drawable/bordergreen"
            android:text="Based on all click here is the result" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="291dp"
            app:srcCompat="@drawable/fidoo" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_below="@+id/textView9"
            android:layout_alignParentStart="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="26dp"
            app:srcCompat="@drawable/fidoo" />


    </RelativeLayout>




</RelativeLayout>
